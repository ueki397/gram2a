<form>
  <div class="main">
    <h2 class="form-logo mx-auto"></h2>
    <!--form_with追加する-->
    <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
      <div class="form-group ">
        <%= f.email_field :email,  autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_comfirmation, autocomplete: "off", class: "form-control", placeholder: "パスワードの確認" %>
      </div>
      <div class="action">
        <%= f.submit"登録する", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</form>
