<form>
  <div class="main">
    <h2 class="form-logo mx-auto"></h2>
    <%= form_with scope: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
      <div class="form-group ">
        <%= f.email_field :email,  autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
      </div>
      <div class="actions">
        <%= f.submit"ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
    <br>
    <p class="devise-link">アカウントを持っていない方 →
    <%= link_to "登録する", new_user_registration_path %>
    </p>
  </div>
</form>
